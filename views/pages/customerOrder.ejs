                    <tr>
                      <th
                        class="sorting"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Rendering engine: activate to sort column ascending"
                      >
                        Customer Name
                      </th>
                      <th
                        class="sorting"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Browser: activate to sort column ascending"
                      >
                        Email
                      </th>
                      <th
                        class="sorting sorting_desc"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Platform(s): activate to sort column ascending"
                        aria-sort="descending"
                      >
                        Mobile
                      </th>
                      <th
                        class="sorting sorting_desc"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Platform(s): activate to sort column ascending"
                        aria-sort="descending"
                      >
                      Build Name
                      </th>
                      <th
                        class="sorting sorting_desc"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Platform(s): activate to sort column ascending"
                        aria-sort="descending"
                      >
                        ChipSet
                      </th>
                      <th
                        class="sorting sorting_desc"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Platform(s): activate to sort column ascending"
                        aria-sort="descending"
                      >
                        Payment
                      </th>
                      
                      <th
                        class="sorting sorting_desc"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Platform(s): activate to sort column ascending"
                        aria-sort="descending"
                      >
                        Date
                      </th>
                      <th
                        class="sorting sorting_desc"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Platform(s): activate to sort column ascending"
                        aria-sort="descending"
                      >
                      Status
                      </th>
                      <th
                        class="sorting"
                        tabindex="0"
                        aria-controls="example1"
                        rowspan="1"
                        colspan="1"
                        aria-label="Engine version: activate to sort column ascending"
                      >
                        action
                      </th>
                      <!-- <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">CSS grade</th> -->
                    </tr>
                  </thead>
                  <% if(typeof order=='object' && order.length){ 
                    for(var i = 0; i< order.length; i++) {%>
                  <tbody>
                    <tr class="odd">
                      <td><%= order[i].user.fname  +" "+ order[i].user.lname%></td>
                      <td><%= order[i].user.email%></td>
                      <td><%= order[i].user.phone_no%></td>
                      <td><%= order[i].order_has_products[0].product.name %></td>
                      <td><%= order[i].order_has_products[0].product.chipset %></td>
                      <td><%= order[i].Amount%></td>
                      <td><%= order[i].Date%></td>
                      <% if(typeof order=='object' && order[i].OrderStatus=="ordered"){%>
                      <td class="text-warning"><%= order[i].OrderStatus%></td>
                      <% }else if(typeof order=='object' && order[i].purchase_staus=="Accept"){%>
                      <td class="text-success"><%= order[i].purchase_staus%></td>
                      <% }else if(typeof order=='object' && order[i].purchase_staus=="Denied"){%>
                      <td class="text-danger"><%= order[i].purchase_staus%></td>
                      <% } else {%>
                      <td class="text-danger"><%= order[i].purchase_staus%></td>
                      <% } %>    
                      <td>
                        <% var text = ''%>
                        <% var id = ''%>
                        <% if (typeof order=='object' && order[i].idMotherboard ) { %>
                          <% text = 'motherboard' %>
                          <% id = order[i].idMotherboard %>

                        <% } else if (typeof order=='object' && order[i].Power_Supply_idPower_Supply) { %>
                          <% text = 'powersupply' %>
                          <% id = order[i].Power_Supply_idPower_Supply %>

                        <% } else if (typeof order=='object' && order[i].idCpu) { %>
                          <% text = 'cpu' %>
                          <% id = order[i].idCpu %>

                        <% } else if (typeof order=='object' && order[i].idgraphic) { %>
                          <% text = 'graphiccard' %>
                          <% id = order[i].idgraphic %>

                        <% } else if (typeof order=='object' && order[i].idCabinet) { %>
                          <% text = 'cabinet' %>
                          <% id = order[i].idCabinet %>

                        <% } else if (typeof order=='object' && order[i].idRam) { %>
                          <% text = 'ram' %>
                          <% id = order[i].idRam %>

                        <% } else if (typeof order=='object' && order[i].idCooling_System) { %>
                          <% text = 'colling' %>
                          <% id = order[i].idCooling_System %>

                        <% } else if (typeof order=='object' && order[i].isStorage) { %>
                          <% text = 'storage' %>
                          <% id = order[i].isStorage %>
                        <% } %>
                        <a href="/orders/<%= order[i].idOrder%>">View</a>

                      </td>
                    </tr>
                    <% }}%>
                  </tbody>
                </table>
