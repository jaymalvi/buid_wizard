<body>
    <header>
        <%- include('../layouts/navbar.ejs') %>
    </header>
<div class="CART">
    <div>
        <div class="cartTitle">
            <h1>Cart</h1>
        </div>
        <ul class="cartList">
            <% builds.forEach(function(build,index){ %>
                <li class="cartItem">
                    <div class="cartItemHeader">
                        <div class="cartItemHeaderLeft">
                            <img src=<%= build.CImageURL %> alt="" class="cartItemImg">
                            <div class="cartItemTitleCont">
                                <h4 class="cartItemTitle">NZXT Build 1</h4>
                            </div>
                        </div>
                        <div class="cartItemHeaderRight">
                            <div class="cartItemActioinCont">
                                <a href="" class="cartItemEdit">Edit</a>
                                <button class="cartItemDelete"><span class=" fs-3"><i
                                            class="bi bi-trash"></i></span></button>
                            </div>
                            <div class="cartItemPriceCont">
                                <p class="cartItemPrice">2000</p>
                            </div>
                        </div>
                    </div>
                    <div class="cartItemBody">
                        <dl>
                            <dt>Case</dd>
                            <dd><%= build.CName %></dt>
                            <dt>CPU</dd>
                            <dd><%= build.CPUName %></dt>
                            <dt>GPU</dd>
                            <dd><%= build.GPUName %></dt>
                            <dt>Motherboard</dd>
                            <dd><%= build.MName %></dt>
                            <dt>Cooling System</dd>
                            <dd><%= build.CLName %></dt>
                            <dt>Power Supply</dd>
                            <dd><%= build.PName %></dt>
                            <dt>Ram</dd>
                            <dd><%= build.RName %></dt>
                            <dt>Storage</dd>
                            <dd><%= build.SName %></dt>
                        </dl>
                    </div>
                </li>
                <%}) %>
        </ul>
    </div>
    <div>
        <div class="p-5 shadow"
            style="border: 1px solid rgba(0, 0, 0, 0.123);width: 550px;position: absolute;top: 150px;left: 800px;">
            <span style="font-size: 22px;">Total:</span></br>
            <i class="fas fa-rupee-sign fs-2"></i>
            <span style="font-weight: bolder;font-size: 40px;">
                <%= total %>
            </span>
            <form action="/cartCheckout" method="get">
                <button type="submit" class="btn btn-primary border-dark mt-2 p-3 fw-bold w-100"
                    style="background-color:#E50914;border: 0;">Proceed to Checkout</button>
                <input type="hidden" name="cid" value="">
            </form>
        </div>
    </div>
</div>
